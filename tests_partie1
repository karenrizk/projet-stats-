def cree_fichier_alea(nb,nomfichier):
    """nom d'un fichier sur le disque dur, fonction ouvre et lit ce fichier """
    nbrcloud = open("nbrcloud","w")
    for i in range(nb):
        nbrcloud=write(rd.random(0,500)) + write(rd.random(0,500))
    open('nomfichier', 'r')


